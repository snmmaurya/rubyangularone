<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
           Employment
           <small>Show Employment</small>
        </h1>                
    </div>
</div>
<!-- /.row -->

<!-- Employment Content -->
<div class="row">
  <div class="control-group form-group">
		<div class="controls">
		<label>Role</label>
		<%= @employment.role %>
		</div>
    <div class="controls">
    <label>Company</label>
    <%= @employment.company %>
    </div>
    <div class="controls">
    <label>Status</label>
    <%= @employment.status %>
    </div>
    <div class="controls">
    <label>Description</label>
    <%= @employment.description %>
    </div>
    <div class="controls">
    <label>Joined At</label>
    <%= @employment.joined_at %>
    </div>
    <div class="controls">
    <label>Leaved At</label>
    <%= @employment.leaved_at %>
    </div>
		<div class="controls">
			<%= link_to :Back, administrator_employments_path, class: "btn btn-default" %>			
			<%= link_to :Edit, edit_administrator_employment_path(@employment), class: "btn btn-info" %>
      <%= link_to :Destroy, administrator_employment_path(@employment), method: :delete, data: {confirm: "Are you sure!"}, class: "btn btn-danger" %>
		</div>
   </div>
</div>