<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
           Technology
           <small>Update Technology</small>
        </h1>                
    </div>
</div>
<!-- /.row -->

<!-- Technology Content -->
<div class="row">
  <%= form_for([:administrator, @technology]) do |form| %>
    <%= render partial: "shared/error_messages", locals: {error: @technology}  %>    
    <div class="control-group form-group">
      <%= render partial: "form", locals: {form: form, buttons: link_to(:Show, administrator_technology_path(@technology), class: "btn btn-default")} %>      
    </div>
  <% end %>
</div>