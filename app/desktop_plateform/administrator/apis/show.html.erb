<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
           Api
           <small>Show Api</small>
        </h1>                
    </div>
</div>
<!-- /.row -->

<!-- Api Content -->
<div class="row">
  <div class="control-group form-group">
		<div class="controls">
  		<label>Title</label>
  		<%= @api.title %>
		</div>
		<div class="controls">
			<%= link_to :Back, administrator_apis_path, class: "btn btn-default" %>			
			<%= link_to :Edit, edit_administrator_api_path(@api), class: "btn btn-info" %>
      <%= link_to :Destroy, administrator_api_path(@api), method: :delete, data: {confirm: "Are you sure!"}, class: "btn btn-danger" %>
		</div>
   </div>
</div>