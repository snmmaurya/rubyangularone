<!-- Portfolio Content -->
<div class="row">
  <div class="control-group form-group">
		<div class="controls">
		<label>Title</label>
		<%= @portfolio.title %>
		</div>
		<div class="controls">
			<%= link_to :Back, administrator_portfolios_path, class: "btn btn-default" %>
