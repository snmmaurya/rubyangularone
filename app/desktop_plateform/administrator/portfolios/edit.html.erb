<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
           Portfolio
           <small>Update Portfolio</small>
        </h1>                
    </div>
</div>
<!-- /.row -->

<!-- Portfolio Content -->
<div class="row">
  <%= form_for([:administrator, @portfolio]) do |form| %>
    <%= render partial: "shared/error_messages", locals: {error: @portfolio}  %>    
    <div class="control-group form-group">
      <%= render partial: "form", locals: {form: form, buttons: link_to(:Show, administrator_portfolio_path(@portfolio), class: "btn btn-default")} %>      
    </div>
  <% end %>
</div>