<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Profile of:
            <%= @user.username %>
            <!-- <small>About Me !</small> -->
        </h1>                
    </div>
</div>
<!-- /.row -->

<!-- Intro Content -->
<div class="row">
    <div class="col-md-4">
        <% if @user.image.present? %>
            <%= cl_image_tag(@user.image.url, width: "150", height: "150", crop: :fit) %>
        <% else %>
            <%= image_tag default_image, width: "150", height: "150", class: "img-responsive" %>
        <% end %>
        <!-- <img class="img-responsive" src="http://placehold.it/750x450" alt=""> -->
    </div>
    <div class="col-md-8">
        <h2>
            About <%= @user.username %>
        </h2>
        <p>
            <%= @user.infos.last.about_yourself if  @user.infos.last.present? %>
        </p>
    </div>
</div>
<!-- /.row -->
<!-- My Solutions -->
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">My Solutions</h2>
    </div>
    <%= solutions %>
</div>
<!-- /.row -->




