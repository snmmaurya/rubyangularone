<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
      <div class="col-sm-12">
        <h1 class="page-header">[<%= @book.title %>]
            <small><%= @lession.title %></small>
            <% if admin? %>
              <%= link_to :new, new_studies_book_lession_path(@book), class: "btn btn-xs btn-primary" %>
              <%= link_to :edit, edit_studies_book_lession_path(@book, @lession), class: "btn btn-xs btn-primary" %> 
              <%= link_to "Download PDF", studies_book_lession_path(@book, @lession, download: :true), class: "btn btn-xs btn-info" %>             
            <% end %>
        </h1>
      </div>  
     <!--  <div class="col-sm-6">
        <%#= render partial: "previous_next" %>
      </div>  -->                 
    </div>
</div>
<!-- /.row -->

<!-- Team Members -->
<div class="row">
  <div class="col-sm-3">
    <%= render "lession" %>
  </div>
  <div class="col-sm-9">
    <div class="row">
      <%= @lession.description.html_safe %>
    </div>
    <%= render partial: "previous_next" %>
