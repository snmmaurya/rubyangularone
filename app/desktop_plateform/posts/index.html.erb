<!-- Page Heading/Breadcrumbs -->
<div class="row page-header">
  <!-- <div style="height:20px;"></div> -->
  <div class="col-lg-12 col-sm-12">
    <div class="col-sm-12 text-right problem-filters-container">
      <nav>
        <div class="container">
          <div class="navbar-header">          
          </div>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
            <ul class="nav navbar-nav navbar-right">
              <li>
                <% if current_user.present? %>
                <%= link_to "Create Post", new_post_path(@solution), class: "btn btn-sm btn-default pull" %>
                <% else %>
                <%= link_to "Create Post", new_user_session_path, class: "btn btn-sm btn-default pull" %>
                <% end %>
              </li>
              <li>
                <%= link_to "Total Posts [#{Answer.count}]", "javascript:void(0)", class: "btn btn-sm btn-default pull" %>
              </li>
              <li class="padding10">
                <select class="posts_per_page form-control">
                <% total=10; for counter in 1..10 %>
                <option value="<%=total%>">
                <%=total%>
                </option>
                <% total += 10; end %>
                </select> 
              </li>
              <li>
                <form class="navbar-form" role="search" onsubmit="return false;">
                  <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search" name="keyword" id="keyword">
                    <div class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                  </div>
                </form>
              </li>                            
            </ul>
          </div>     
        </div>
      </nav>
    </div>  
  </div>
  <div class="col-lg-12 col-sm-12">
    <h4>
      Posts
    </h4>
  </div>
</div>
<!-- /.row -->
<div class="row" id="posts">
<%= render "post" %>
</div>
