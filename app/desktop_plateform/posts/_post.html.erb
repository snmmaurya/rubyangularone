<% if @posts.present? %>
  <% @posts.each do |post| %>
    <div class="col-lg-12">
      <div class="well">
        <p>
          <%= post.title.html_safe %>
          <%= post.description.html_safe %>
        </p>
        <div class="panel-body">          
          <div class="col-sm-12 col-lg-3 text-right period">
            <%= link_to :VIEW, programmers_solution_post_answers_path(solution, post) %>
            <%# if (current_user && current_user.id == post.user_id) || admin? %>
              <%#= link_to :EDIT, edit_programmers_solution_post_path(solution, post), remote: true %>
              <%#= link_to :DELETE, programmers_solution_post_path(solution, post), method: :delete, data: {confirm: "Are you sure!"} %>
          </div>
        </div>
      </div>
    </div>    
  <% end %>
<% else %>
  <div class="col-lg-12 text-center">
    <div class="data-not-found">---- Data not found ! ----</div>
  </div>
<% end %>

  <div class="col-lg-12">
  <%= link_to "Go Back", @posts_path, class: "btn btn-default pull" %>
  <%#= paginate @posts %>
  </div>