<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Portfolio
           <small>My Portfolio</small>
        </h1>
    </div>
</div>
<!-- /.row -->

<!-- Projects Row -->
<div class="row">
  <% if @portfolios.present? %>
    <% @portfolios.each do |portfolio| %>
      <div class="col-md-6 img-portfolio">
          <a href="<%=portfolio_path(portfolio)%>"> <!--  size: "700x400" -->
            <%= cl_image_tag(portfolio.image, width: "100", height: "100", crop: :fit, alt: portfolio.title, title: portfolio.title) %>
          </a>
           <%= link_to portfolio.title, portfolio_path(portfolio) %>
          </h3>
          <p><%= "#{portfolio.description[0..200]}..." %></p>
      </div>
    <% end %>
  <% else %>
    <div class="col-lg-12 text-center">
      <div class="data-not-found">---- Data not found ! ----</div>
    </div>
  <% end %>
</div>
<!-- /.row -->	