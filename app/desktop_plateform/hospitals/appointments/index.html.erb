<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
           Appointment
           <small>All Appointments</small>
           <%= link_to :new, new_hospitals_appointment_path, class: "btn btn-xs btn-primary" %>

           <%= link_to "Download XLS", hospitals_appointments_path(download: :true), class: "btn btn-xs btn-info" %>
        </h1>                
    </div>
</div>
<!-- /.row -->

<!-- Content -->
<div class="row">
	<div class="table-responsive">
	  <table class="table table-bordered table-hover table-striped">
	      <thead>
	          <tr>
	              <th>Sr</th>
	              <th>Doctor</th>
                <th>Patient</th>
                <th>Appointment On</th>
	              <th>Actions</th>
	          </tr>
	      </thead>
	      <tbody>
	      <% if @appointments.present? %>
	      <% counter = 0 %>
		      <% @appointments.each do |appointment| %>
		          <tr>
		              <td><%= counter = counter + 1 %></td>
		              <td><%= appointment.doctor.name %></td>
                  <td><%= appointment.patient.name %></td>
                  <td><%= appointment.appointment_at %></td>
		              <td>
		              	<%= link_to :view, hospitals_appointment_path(appointment), class: "btn btn-xs btn-default" %>
		              	<%= link_to :edit, edit_hospitals_appointment_path(appointment), class: "btn btn-xs btn-info" %>
		              	<%= link_to :delete, hospitals_appointment_path(appointment), method: :delete, data: {confirm: "Are you sure!"}, class: "btn btn-xs btn-danger" %>
		              </td>            	              
		          </tr>
		      <% end %>
		    <% else %>
		    	<tr><td colspan="5" class="text-center">Data not found!</td></tr>  
	      <% end %>    	         
	      </tbody>
	  </table>
	</div>
</div>
<!-- /.row -->