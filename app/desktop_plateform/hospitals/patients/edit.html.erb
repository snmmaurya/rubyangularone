<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
           Patient
           <small>Update Patient</small>
        </h1>                
    </div>
</div>
<!-- /.row -->

<!-- Patient Content -->
<div class="row">
  <%= form_for([:hospitals, @patient]) do |form| %>
    <%= render partial: "shared/error_messages", locals: {error: @patient}  %>    
    <div class="control-group form-group">
      <%= render partial: "form", locals: {form: form, buttons: link_to(:Show, hospitals_patient_path(@patient), class: "btn btn-default")} %>      
    </div>
  <% end %>
</div>