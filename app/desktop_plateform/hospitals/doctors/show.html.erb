<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
           Doctor
           <small>Show Doctor</small>
        </h1>                
    </div>
</div>
<!-- /.row -->

<!-- Doctor Content -->
<div class="row">
  <div class="control-group form-group">
		<div class="controls">
  		<label>Title</label>
  		<%= @doctor.name %>
		</div>
    <div class="controls">
      <label>Practice</label>
      <%= @doctor.practice %>
    </div>
		<div class="controls">
			<%= link_to :Back, hospitals_doctors_path, class: "btn btn-default" %>			
			<%= link_to :Edit, edit_hospitals_doctor_path(@doctor), class: "btn btn-info" %>
      <%= link_to :Destroy, hospitals_doctor_path(@doctor), method: :delete, data: {confirm: "Are you sure!"}, class: "btn btn-danger" %>
		</div>
   </div>
</div>