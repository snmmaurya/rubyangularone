<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
           Doctor
           <small>Update Doctor</small>
        </h1>                
    </div>
</div>
<!-- /.row -->

<!-- Doctor Content -->
<div class="row">
  <%= form_for([:hospitals, @doctor]) do |form| %>
    <%= render partial: "shared/error_messages", locals: {error: @doctor}  %>    
    <div class="control-group form-group">
      <%= render partial: "form", locals: {form: form, buttons: link_to(:Show, hospitals_doctor_path(@doctor), class: "btn btn-default")} %>      
    </div>
  <% end %>
</div>