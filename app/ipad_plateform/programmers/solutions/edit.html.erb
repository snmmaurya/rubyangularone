<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
           Solution
           <small>Update Solution</small>
        </h1>                
    </div>
</div>
<!-- /.row -->

<!-- solution Content -->
<div class="row">
  <%= form_for([:programmers, @solution]) do |form| %>
    <%= render partial: "shared/error_messages", locals: {error: @solution}  %>    
    <div class="control-group form-group">
      <%= render partial: "form", locals: {form: form, buttons: link_to(:Show, programmers_solution_path(@solution), class: "btn btn-default")} %>
    </div>
  <% end %>
</div>