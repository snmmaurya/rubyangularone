<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
           Signin
        </h1>                
    </div>
</div>
<!-- /.row -->


<div class="row">
  <div class="col-sm-8">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="control-group form-group">
      <div class="controls">
        <%= f.label :Email %>
        <%= f.text_field :login, class: "form-control", required: false, maxlength: 250, autofocus: true %>
      </div>
      <div class="controls">
        <%= f.label :Password %>
        <%= f.password_field :password, class: "form-control", required: false, maxlength: 250, autocomplete: "off" %>
      </div>
        <% if devise_mapping.rememberable? -%>
        <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
        </div>
        <% end -%>
        <%= f.submit "Signin", class: "btn btn-primary" %>
      </div>
  <% end %>
  </div>
  <div class="col-sm-4">
  <label class="text-center center-block">-----Or Signin with-----</label>
    <%= link_to "<i class='fa fa-github'></i> Signin with Github".html_safe, user_omniauth_authorize_path(:github), class: "btn btn-block btn-social btn-github" %>

    <%= link_to "<i class='fa fa-twitter'></i> Signin with Twitter".html_safe, user_omniauth_authorize_path(:twitter), class: "btn btn-block btn-social btn-twitter" %>

    <%= link_to "<i class='fa fa-google'></i> Signin with Google".html_safe, user_omniauth_authorize_path(:google_oauth2), class: "btn btn-block btn-social btn-google" %>

    <%= link_to "<i class='fa fa-facebook'></i> Signin with Facebook".html_safe, user_omniauth_authorize_path(:facebook), class: "btn btn-block btn-social btn-facebook" %>
  </div>
  <div class="col-sm-4">
    <br><br>
    <%= render "users/shared/links" %>
  </div>
</div>
