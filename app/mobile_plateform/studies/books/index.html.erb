<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Studies
            <small>All Books</small>
            <% if admin? %>
              <%= link_to :new, new_studies_book_path, class: "btn btn-xs btn-primary" %>
              <%= link_to "Download XLS", administrator_portfolios_path(download: :true), class: "btn btn-xs btn-info" %>
            <% end %>
        </h1>                
    </div>
</div>
<!-- /.row -->

<!-- Team Members -->
<div class="row">
  <% if @books.present? %>
    <% @books.each do |book| %>
      <div class="col-md-4 text-center">    
          <div class="thumbnail">
          <a href="<%=studies_book_lessions_path(book) %>">
            <%= image_tag(book.image, alt: book.title, class: "books-img-size") %>
          </a>
          <div class="caption">
            <h3>
              <a href="<%=studies_book_lessions_path(book) %>">
                <%= book.title %>
              </a>
            </h3>
            <p><%=book.description[0..200] %>
            <%= link_to "Edit", edit_studies_book_path(book), class: "btn btn-info block" if admin? %>
            </p>
          </div>
          </div>      
      </div>
    <% end %>
  <% else %>
    <%= render partial: "shared/not_found", locals: {title: :book} %>
  <% end %>  
</div>
<!-- /.row -->