<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
           Portfolio
           <small>All Portfolios</small>
           <%= link_to :new, new_administrator_portfolio_path, class: "btn btn-xs btn-primary" %>

           <%= link_to "Download XLS", administrator_portfolios_path(download: :true), class: "btn btn-xs btn-info" %>
        </h1>                
    </div>
</div>
<!-- /.row -->

<!-- Content -->
<div class="row">
	<div class="table-responsive">
	  <table class="table table-bordered table-hover table-striped">
	      <thead>
	          <tr>
	              <th>Sr</th>
	              <th>Title</th>
	              <th>Created At</th>
	              <th>Actions</th>
	          </tr>
	      </thead>
	      <tbody>
	      <% if @portfolios.present? %>
	      <% counter = 0 %>
		      <% @portfolios.each do |portfolio| %>
		          <tr>
		              <td><%= counter = counter + 1 %></td>
		              <td><%= portfolio.title %></td>
		              <td><%= time_format(portfolio.created_at) %></td>
		              <td>
		              	<%= link_to :view, administrator_portfolio_path(portfolio), class: "btn btn-xs btn-default" %>
		              	<%= link_to :edit, edit_administrator_portfolio_path(portfolio), class: "btn btn-xs btn-info" %>
		              	<%= link_to :delete, administrator_portfolio_path(portfolio), method: :delete, data: {confirm: "Are you sure!"}, class: "btn btn-xs btn-danger" %>
		              </td>            	              
		          </tr>
		      <% end %>
		    <% else %>
		    	<tr><td colspan="5" class="text-center">Data not found!</td></tr>  
	      <% end %>    	         
	      </tbody>
	  </table>
	</div>
</div>
<!-- /.row -->